<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deleteQuestButton"
            android:id="@+id/deleteQuestButton"
            android:background="#0277bd"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:layout_alignStart="@+id/deleteLandmarkButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendQuestButton"
            android:id="@+id/sendQuestButton"
            android:background="#0277bd"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/deleteQuestButton"
            android:layout_below="@+id/customLandmarkListView"
            android:layout_alignEnd="@+id/sendLandmarkButton" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="148dp"
            android:id="@+id/customLandmarkListView"
            android:layout_below="@+id/customLandmarkText"
            android:layout_alignEnd="@+id/deleteQuestButton"
            android:layout_above="@+id/deleteQuestButton" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/customLandmarkText"
            android:id="@+id/customLandmarkText"
            android:layout_gravity="center_horizontal"
            android:layout_below="@+id/sendLandmarkButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#0c0b0b" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/deleteLandmarkButton"
            android:id="@+id/deleteLandmarkButton"
            android:background="#0277bd"
            android:layout_gravity="end"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sendLandmarkButton"
            android:id="@+id/sendLandmarkButton"
            android:background="#0277bd"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_alignBottom="@+id/deleteLandmarkButton" />

        <ListView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/customQuestListView"
            android:layout_alignEnd="@+id/deleteQuestButton"
            android:layout_below="@+id/questText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/questText"
            android:id="@+id/questText"
            android:layout_below="@+id/sendQuestButton"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:textColor="#0e0d0d" />

    </RelativeLayout>
</LinearLayout>