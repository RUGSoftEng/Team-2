<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/martini4"
    android:alpha=".75"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".Activities.MainActivity">

    <!--android:paddingRight="@dimen/activity_horizontal_margin"-->

    <ImageSwitcher
    android:id="@+id/imageSwitcher1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/wallet_holo_blue_light"
            android:alpha=".75"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/string1_main"
            android:id="@+id/textView1"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:layout_alignTop="@+id/imageView"
            android:layout_centerHorizontal="true" />

        <TextView
            android:layout_width="150dp"
            android:layout_height="20dp"
            android:text="@string/string_main"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_below="@+id/textView1"
            android:layout_alignStart="@+id/textView1"
            android:layout_alignEnd="@+id/textView1" />



            <Button
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="@string/button_main"
                android:id="@+id/button_main"
                android:enabled="true"
                android:nestedScrollingEnabled="false"
                android:layout_below="@+id/textView"
                android:layout_centerHorizontal="true" />

            <Button
                style="?android:attr/buttonStyleSmall"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:text="Continue A quest"
                android:id="@+id/continueButton"
                android:layout_below="@+id/button_main"
                android:layout_alignStart="@+id/button_main"
                android:layout_alignEnd="@+id/button_main" />

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/button2_main"
                android:id="@+id/mapButton"
            android:layout_below="@+id/createQuest"
            android:layout_alignStart="@+id/createQuest"
            android:layout_alignEnd="@+id/createQuest"
            android:layout_alignParentBottom="true" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="@string/button1_main"
                android:id="@+id/createQuest"
                android:layout_gravity="right|center_vertical"
                android:layout_below="@+id/continueButton"
                android:layout_alignStart="@+id/continueButton"
                android:layout_alignEnd="@+id/continueButton" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:text="Userpage"
                android:id="@+id/testbutton"
                android:layout_alignTop="@+id/createQuest"
                android:layout_alignParentStart="true"
                android:layout_gravity="left|center_vertical" />

    </RelativeLayout>


</LinearLayout>
