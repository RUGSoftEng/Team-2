<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/martini4"
    android:alpha=".75"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main" tools:context=".Activities.MainActivity">

    <ImageSwitcher
    android:id="@+id/imageSwitcher1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="350dp">

        <ImageView
            android:layout_marginTop="80dp"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:background="@color/wallet_holo_blue_light"
            android:alpha=".75"
            android:id="@+id/imageView" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/JoinUsText_main"
            android:id="@+id/textView"
            android:textColor="#ffffff"
            android:layout_below="@+id/congratsText"
            android:layout_alignStart="@+id/congratsText" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/meetGroningenText_main"
            android:id="@+id/congratsText"
            android:textColor="#ffffff"
            android:textSize="@dimen/abc_text_size_display_1_material"
            android:layout_alignTop="@+id/imageView"
            android:layout_toEndOf="@+id/userpageButton_main" />

        <Button
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:text="@string/newQuestButton_main"
            android:id="@+id/newQuestButton"
            android:enabled="true"
            android:nestedScrollingEnabled="false"
            android:layout_below="@+id/textView"
            android:layout_alignEnd="@+id/mapButton"
            android:layout_alignStart="@+id/continueButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mapButton_main"
            android:id="@+id/mapButton"
            android:layout_below="@+id/newQuestButton"
            android:layout_alignStart="@+id/textView" />

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/continueQuestButton_main"
            android:id="@+id/continueButton"
            android:layout_below="@+id/mapButton"
            android:layout_alignStart="@+id/mapButton" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/userpageButton_main"
            android:id="@+id/userpageButton_main"
            android:layout_below="@+id/continueButton"
            android:layout_alignParentStart="true" />

    </RelativeLayout>


</LinearLayout>
