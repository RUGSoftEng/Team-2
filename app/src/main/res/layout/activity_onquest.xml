        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:id="@+id/onquestmap"
        android:layout_weight="0.31" />

    <TextView
        android:layout_width="135dp"
        android:layout_height="33dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Quest Progress:"
        android:id="@+id/progressText"
        android:layout_above="@+id/progressBar"
        android:layout_centerHorizontal="true" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next Landmark:"
        android:id="@+id/nextLandmarkText"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="45dp"
        android:id="@+id/listView3"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/nextLandmarkText"
        android:layout_alignBottom="@+id/next2LandmarksText" />
    <!--android:layout_weight="0.27" />-->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Next 2 Landmarks:"
        android:id="@+id/next2LandmarksText"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/nextLandmarkText"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="180dp"
        android:id="@+id/listView4"
        android:layout_below="@+id/listView3"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/progressText"/>
